<h1>All Articles</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |article|%>
    <tr>
      <td><%= article.title%></td>
      <td><%= article.author%></td>
      <td><%= article.description%></td>
      <td>an action</td>
    </tr>
    <%end%>
  </tbody>
</table>